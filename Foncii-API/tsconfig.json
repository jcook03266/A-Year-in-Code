{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "build",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "target": "ES2022",
    "declaration": true,
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": ["src", "apollo.config.ts"]
}
